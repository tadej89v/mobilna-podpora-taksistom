<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">
	    
    <ImageView
        android:id="@+id/id_izbira_slika"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_taxi" />
    
	<LinearLayout
	    android:id="@+id/id_izbira"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_izbira_slika"
        android:layout_alignTop="@+id/id_izbira_slika"
        android:layout_marginLeft="5dp"
        android:singleLine="true">
	
	    <TextView
        	android:id="@+id/id_izbira_email"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:singleLine="true"
        	android:layout_marginBottom="4dp"/>
	   	
	   	<TextView
	        android:id="@+id/id_izbira_razdalja"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	   	
	   	<TextView
	        android:id="@+id/id_izbira_cas"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	   	
	   	<TextView
	        android:id="@+id/id_izbira_naslov"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	
	</LinearLayout>
	
	<RelativeLayout 
		android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_below="@+id/id_izbira"
       	android:layout_marginTop="5dp"
       	android:padding="5dp">
	   	<Button
		    android:id="@+id/id_izbira_ok"
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
		    android:text="@string/izbira_ok"
	    	android:layout_toLeftOf="@+id/id_izbira_cancel"
	    	android:layout_marginRight="10dp"
	       	android:background="@drawable/taxi_button"/>
		<Button
		    android:id="@+id/id_izbira_cancel"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/izbira_cancel"
		    android:background="@drawable/taxi_button"
		    android:layout_alignParentRight="true"/>
    </RelativeLayout>
	
</RelativeLayout>